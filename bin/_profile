#!/bin/bash

if [[ "$#" > 0 ]]; then
  HUBFLOW="$1"; shift
fi

: ${HUBFLOW:="$(cd -P -- "$(dirname -- "${BASH_SOURCE}")/.." && pwd -P)"}

PATH="$HUBFLOW/bin:$PATH"
hash -r

function git {
  if [[ -x "$HUBFLOW/bin/hub" ]]; then
    "$HUBFLOW/bin/hub" "$@"
  else
    hash -r
    command git "$@"
  fi
}
