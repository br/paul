#!/bin/bash

#/ NAME
#/     git pru -- update the PR workarea
#/
#/ SYNOPSIS
#/     git pru

# figure out the project root under which bin, lib live
shome="$(unset CDPATH; cd -P -- "$(dirname -- "$0")/.." && pwd -P)"

# load a meat library
source "$shome/libexec/_jason"
require paul

# entry point
function main {
  if [[ "$#" != 0 ]]; then
    logger_fatal "no arguments needed"
    display_help
    exit 1
  fi

  local pr="$(basename $(git rev-parse --abbrev-ref HEAD))"

  case "$pr" in
    [0123456789][0123456789]+)
      git fetch
      git merge $(git ls-remote origin refs/pull/$pr/head)
      ;;
    *)
      logger_fatal "pr must be a number"
      exit 1
      ;;
  esac
}

# parse the command-line
parse_command_line "$@" || exit $?
eval set -- "${FLAGS_ARGV}"

# pass arguments to entry point
main "$@"
