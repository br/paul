#!/bin/bash

#/ NAME
#/     git owner -- set owner rw remote based on origin
#/
#/ SYNOPSIS
#/     git owner
#/     git owner [remote]

# figure out the project root under which bin, lib live
shome="$(cd -P -- "$(dirname -- "$0")/.." && pwd -P)"

# load a meat library
source "$shome/libexec/_treadstone"

# entry point
function main {
  local nm_remote="origin"
  local nm_branch

  if [[ "$#" > 1 ]]; then
    display_help
    exit 1
  fi


  local url_origin="$(git remote show origin | awk '/Fetch URL/ {print $NF}')"
  local url_owner="$url_origin"
  if [[ "$url_origin" =~ ^https?:// ]]; then
    url_owner="$(echo "$url_origin" | sed 's#https*://#git@#; s#/#:#')"
  fi
  git remote rm owner 2>&1 > /dev/null || { logger_info "ignore previous error"; true; }
  git remote add owner "$url_owner"

  if [[ "$#" = 1 ]]; then
    nm_branch="$1"; shift
    git branch -d "$nm_branch" || { logger_info "ignore previous error"; true; }
    git checkout -b "$nm_branch" || { logger_info "ignore previous error"; true; }
    git push -u owner "$nm_branch"
  fi
}

# parse the command-line
parse_command_line "$@" || exit $?
eval set -- "${FLAGS_ARGV}"

# pass arguments to entry point
main "$@"
