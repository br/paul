#!/bin/bash

#/ NAME
#/     git setup -- sets up a git repo from configuration
#/
#/ SYNOPSIS
#/     git setup

# figure out the project root under which bin, lib live
shome="$(cd -P -- "$(dirname -- "$0")/.." && pwd -P)"
ghome="$(cd -P -- "./$(git rev-parse --show-cdup)" && pwd -P)"

# load a meat library
source "$shome/libexec/_treadstone"

# entry point
function main {
  cd $ghome

  if [[ ! -f "$ghome/.gitsetup.yml" ]]; then
    log_fatal "missing .gitsetup.yml"
    exit 1
  fi

  setup_remotes
}

function setup_remotes {
  local nm_remote
  for nm_remote in $(ryaml $ghome/.gitsetup.yml remotes | grep : | cut -d: -f1); do
    local url=$(ryaml $ghome/.gitsetup.yml remotes $nm_remote)
    local url_local="$(git remote show $nm_remote 2>&- | grep 'Fetch URL:' | cut -d: -f2- | awk '{print $1}')"

    if [[ -z "$url_local" ]]; then
      true
    elif [[ "$url_local" != "$url" ]]; then
      git remote remove $nm_remote
    else
      continue
    fi

    git remote add $nm_remote $url || git remote show $nm_remote
    echo
  done
}

require sub "$BASH_SOURCE" "$@"
